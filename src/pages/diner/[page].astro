import Recipe from '../../layouts/Recipe.astro'


export async function getStaticPaths() {
  const meals = await Astro.glob('./*.md')

  return meals.map((meal) => {
    return {
      params: { meal: meal.frontmatter.title.toLowerCase().replaceAll(' ', '-') },
      props: { meal }
    }
  })
}

const { meal } = Astro.props
